<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/picker_background"
    tools:context=".MainActivity">

  <jp.co.cyberagent.android.gpuimage.GPUImageView
      android:id="@+id/gpuimageview"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginBottom="8dp"
      app:gpuimage_show_loading="false"
      app:gpuimage_surface_type="texture_view"
      app:layout_constraintBottom_toTopOf="@+id/radio"
      app:layout_constraintTop_toTopOf="parent"/>

  <SeekBar
      android:id="@+id/seekBalance"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:max="100"
      android:progress="50"
      android:text="Add filter"
      android:visibility="gone"
      app:layout_constraintBottom_toTopOf="@+id/gv_highlights"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>


  <com.example.opengl.image.gpuimage.widgets.ColorPickerView
      android:id="@+id/gv_highlights"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:background="@color/picker_background"
      android:layerType="software"
      android:padding="8dp"
      android:visibility="gone"
      app:layout_constraintBottom_toTopOf="@+id/gv_shadows"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

  <com.example.opengl.image.gpuimage.widgets.ColorPickerView
      android:id="@+id/gv_shadows"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="16dp"
      android:background="@color/picker_background"
      android:layerType="software"
      android:padding="8dp"
      android:visibility="gone"
      app:layout_constraintBottom_toTopOf="@+id/buttonPick"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

  <RadioGroup
      android:id="@+id/radio"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintBottom_toTopOf="@+id/sb_hue"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <RadioButton
        android:id="@+id/rb_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:buttonTint="@android:color/holo_red_dark"/>

    <RadioButton
        android:id="@+id/rb_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:buttonTint="@android:color/holo_orange_dark"/>

    <RadioButton
        android:id="@+id/rb_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:buttonTint="@color/colorYellow"/>

    <RadioButton
        android:id="@+id/rb_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:buttonTint="@android:color/holo_green_dark"/>

    <RadioButton
        android:id="@+id/rb_cyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:buttonTint="@color/colorCyan"/>

    <RadioButton
        android:id="@+id/rb_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:buttonTint="@android:color/holo_blue_dark"/>

    <RadioButton
        android:id="@+id/rb_violet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:buttonTint="@android:color/holo_purple"/>

    <RadioButton
        android:id="@+id/rb_magenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:buttonTint="@color/colorMagenta"/>

  </RadioGroup>


  <SeekBar
      android:id="@+id/sb_hue"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:max="100"
      android:progress="50"
      app:layout_constraintBottom_toTopOf="@id/sb_saturation"
      app:layout_constraintStart_toStartOf="parent"/>

  <SeekBar
      android:id="@+id/sb_saturation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:max="100"
      android:progress="50"
      app:layout_constraintBottom_toTopOf="@id/sb_value"
      app:layout_constraintStart_toStartOf="parent"/>

  <SeekBar
      android:id="@+id/sb_value"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:max="100"
      android:progress="50"
      app:layout_constraintBottom_toTopOf="@id/buttonPick"
      app:layout_constraintStart_toStartOf="parent"/>

  <Button
      android:id="@+id/buttonPick"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"

      android:text="Pick img"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/buttonSave"
      app:layout_constraintStart_toStartOf="parent"/>

  <Button
      android:id="@+id/buttonSave"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:text="Save img"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/buttonPick"/>
</android.support.constraint.ConstraintLayout>